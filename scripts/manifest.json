    "tools": {
      "description": "Command line tools",
      "scripts": ["tools/git.sh", "tools/gh.sh", "tools/jq.sh", "tools/wget.sh", "tools/tree.sh", "tools/ripgrep.sh", "tools/fd.sh", "tools/bat.sh", "tools/eza.sh", "tools/fzf.sh", "tools/delta.sh", "tools/dust.sh", "tools/procs.sh", "tools/sd.sh", "tools/tealdeer.sh", "tools/hyperfine.sh", "tools/just.sh", "tools/zoxide.sh", "tools/starship.sh"]
